{
  "version": 2,
  "name": "binance-trading-dashboard",
  "builds": [
    {
      "src": "api/*.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.mjs"
    },
    {
      "src": "/api/db-test",
      "dest": "/api/db-test.mjs"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}