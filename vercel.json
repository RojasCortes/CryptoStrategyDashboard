{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/market-data.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/market-stream.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/candles.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/market-data",
      "destination": "/api/market-data.js"
    },
    {
      "source": "/api/market/data",
      "destination": "/api/market-data.js"
    },
    {
      "source": "/api/market-stream",
      "destination": "/api/market-stream.js"
    },
    {
      "source": "/api/market/candles",
      "destination": "/api/candles.js"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
